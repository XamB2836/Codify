<script>
  class PromoTimer {
    constructor(container) {
      this.container = container;
      this.timeElements = container.querySelectorAll('.promo-timer__time');
      this.copyButton = container.querySelector('.promo-timer__code-btn');
      this.endTime = new Date(new Date().getTime() + (8 * 60 * 1000)); // 8 minutes from now
      
      this.setupCopyButton();
      this.startTimer();
    }

    setupCopyButton() {
      if (!this.copyButton) return;

      this.copyButton.addEventListener('click', () => {
        const code = this.copyButton.dataset.code;
        navigator.clipboard.writeText(code).then(() => {
          this.showCopiedMessage();
        });
      });
    }

    showCopiedMessage() {
      const message = document.createElement('div');
      message.className = 'promo-timer__copied';
      message.textContent = 'Copied to clipboard!';
      document.body.appendChild(message);

      // Force reflow
      message.offsetHeight;
      message.classList.add('show');

      setTimeout(() => {
        message.classList.remove('show');
        setTimeout(() => message.remove(), 200);
      }, 2000);
    }

    startTimer() {
      this.updateTimer();
      setInterval(() => this.updateTimer(), 1000);
    }

    updateTimer() {
      const now = new Date().getTime();
      const distance = this.endTime - now;

      if (distance < 0) {
        this.timeElements.forEach(el => el.textContent = '00');
        return;
      }

      const hours = Math.floor(distance / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      this.timeElements.forEach(el => {
        const unit = el.dataset.unit;
        const value = unit === 'hours' ? hours : unit === 'minutes' ? minutes : seconds;
        el.textContent = String(value).padStart(2, '0');
      });
    }
  }

  // Initialize all promo timers on the page
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.promo-timer').forEach(container => {
      new PromoTimer(container);
    });
  });
</script>

